<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyImageText">
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="image" format="reference" />
        <attr name="imageWidth" format="dimension" />
        <attr name="imageHeight" format="dimension" />
        <attr name="imageScaleType">
            <enum name="fillXY" value="0"/>
            <enum name="center" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="MyImageView">
        <attr name="radius" />
        <attr name="width" />
        <attr name="height" />
    </declare-styleable>

    <attr name="radius" format="float"/>
    <attr name="width" format="integer"/>
    <attr name="height" format="integer"/>

    <!--关键技术点:通过自定义属性来标识哪些view支持换肤-->
    <declare-styleable name="SkinView">
        <!--isSupport=true标识当前控件支持换肤-->
        <attr name="isSupport" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SwitchMultiButton">
        <attr name="strokeRadius" format="dimension" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="switchTextSize" format="dimension" />
        <attr name="selectedTab" format="integer" />
        <attr name="selectedColor" format="color|reference" />
        <attr name="switchTabs" format="reference" />
        <attr name="typeface" format="string" />
    </declare-styleable>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lav"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="delivery-car-icon.json"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="gift.json"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="check-animation.json"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="check-mark-success.json"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="ripple-loading-animation.json"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="fingerprint-scan.json"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="like-button.json"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="android-fingerprint.json"/>
    </LinearLayout>

</ScrollView>